# HTML handling - primary viewer with better UTF-8 support
text/html; w3m -I 'UTF-8' -T text/html -o display_link_number=1 -dump %s; \
    nametemplate=%s.html; copiousoutput; description="HTML Text"

# Fallback HTML viewer for graphical display
text/html; xdg-open %s; nametemplate=%s.html; needsterminal; description="Open in GUI Browser"

# Images - using feh with some basic options
image/*; feh -F %s; description="Image viewer"

# PDFs with zathura
application/pdf; zathura %s; needsterminal; description="PDF viewer"

# Plain text - using less instead of cat for better navigation
text/plain; cat %s; copiousoutput; description="Plain text"

# Catch-all for other text formats
text/*; less %s; copiousoutput
